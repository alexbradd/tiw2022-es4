<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>00-loginFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>01-historyFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.HistoryFilter</filter-class>
    </filter>
    <filter>
        <filter-name>02-accountListFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.AccountListFilter</filter-class>
    </filter>
    <filter>
        <filter-name>03-accountFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.AccountDetailsFilter</filter-class>
    </filter>
    <filter>
        <filter-name>04-transferFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.TransferFilter</filter-class>
    </filter>
    <filter>
        <filter-name>99-dropCurrentlyShowAccountFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.DropCurrentlyShowAccountFilter</filter-class>
    </filter>
    <filter>
        <filter-name>99-updateCurrentlyShowAccountFilter</filter-name>
        <filter-class>it.polimi.tiw.templated.filters.UpdateCurrentlyShownAccountFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>00-loginFilter</filter-name>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/createAccount</url-pattern>
        <url-pattern>/details.html</url-pattern>
        <url-pattern>/confirmTransfer.html</url-pattern>
        <url-pattern>/rejectTransfer.html</url-pattern>
        <url-pattern>/newTransfer</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>01-historyFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>02-accountListFilter</filter-name>
        <url-pattern>/index.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>03-accountFilter</filter-name>
        <url-pattern>/details.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>04-transferFilter</filter-name>
        <url-pattern>/confirmTransfer.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>99-updateCurrentlyShowAccountFilter</filter-name>
        <url-pattern>/details.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>99-dropCurrentlyShowAccountFilter</filter-name>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/confirmTransfer.html</url-pattern>
        <url-pattern>/rejectTransfer.html</url-pattern>
    </filter-mapping>
</web-app>